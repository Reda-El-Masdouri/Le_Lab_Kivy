ImagesExemple:

<ImagesExemple@GridLayout>:
    cols: 3
    Image:
        source: "images/cake.jpg"
    Image:
        source: "images/cake.jpg"
        allow_stretch: True
        
    Image:
        source: "images/cake.jpg"
        allow_stretch: True
        keep_ratio: False
    AsyncImage:
        source: "images/donut.gif"
        anim_delay: 1/60
    AsyncImage:
        source: "images/giphy.gif"
        anim_delay: 1/30


<WidgetExemple>:
    cols: 3
    ToggleButton:
        text: "OFF"
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        text: "Compter"
        on_press: root.on_button_click()
        disabled: not root.compteur_actif
    Label:
        text: root.mon_texte
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: 1, 0.5, 1, 1
    Switch:
        id: mon_switch
        on_active: root.on_switch_active(self)
        size_hint: None, 1
        width: "100dp"
        active: True
    Slider:
        id: mon_slider
        min: 0
        max: 100
        value: 50
        disabled: not mon_switch.active
        #on_value: root.on_value_slider(self)
        orientation: "vertical"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(mon_slider.value))
            font_name: "fonts/Lcd.ttf"
            font_size: "80dp"
            color: 1, 0.5, 1, 1
        ProgressBar:
            max: 100
            value: int(mon_slider.value)
    TextInput:
        id: get_text
        size_hint: None, 1
        width: "100dp"
        text: "Ecrire:"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: root.my_texte_input



<PageLayoutExemple@PageLayout>:
    MainWidget:
    BoxLayoutExemple:
    AnchorLayoutExemple:
    GridLayoutExemple:

<ScrollViewExemple@ScrollView>:
    StackLayoutExemple:
        size_hint: 1, None
        height: self.minimum_height

<StackLayoutExemple>:
    # "left-right" or "top-bottom"
    #orientation: "rl-bt"
    # padding: (gauche, haut, droit, bas)
    padding: ("20dp", "10dp", "100dp", "20dp")
    spacing: "20dp", "20dp"
    Button:
        size_hint: .5, .2
        text: "A"
    Button:
        size_hint: .5, .2
        text: "B"
    Button:
        size_hint: .5, .2
        text: "C"


<GridLayoutExemple>:
    # spacing: "10dp"
    # rows, cols
    rows: 2
    Button:
        size_hint: .5, 1
        text: "A"
    Button:
        text: "B"
    BoxLayoutExemple:
    Button:
        size_hint: .5, 1
        text: "D"
    Button:
        text: "E"
    Button:
        text: "F"

<AnchorLayoutExemple@AnchorLayout>:
    # anchor_x: "right", "left", "center"
    # anchor_y: "top", "bottom", "center"
    anchor_x: "left"
    anchor_y: "top"
    BoxLayout:
        orientation: "vertical"
        size_hint: .1, .1
        Button:
            text: "A"
        Button:
            text: "B"
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        BoxLayout:
            orientation: "vertical"
            size_hint: .1, .1
            Button:
                text: "C"

        








<BoxLayoutExemple>:
    orientation: "vertical"
    spacing: "10dp"
    Button:
        text: "A"
        size_hint: 0.5, 0.5
        # x, right, center_x
        # y, top, center_y (orientation: "horizontal")
        pos_hint: { "center_x": 0.5 }
    BoxLayout:
        orientation: "horizontal"
        Button:
            text: "R"
        Button:
            text: "E"
        Button:
            text: "D"
        Button:
            text: "A"    
    Button:
        text: "B"
        size_hint: 1, None
        height: "100dp"
    Button:
        text: "C"
        size_hint: None, None
        size: "100dp", "60dp"
    Label:
        text: "D"

<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp", "60dp"
        pos: "200dp", "100dp"
        color: 0, 0, 1, 1
    Label:
        text: "Hello2"
        size: "100dp", "60dp"
        pos: "400dp", "200dp"
        color: 1, .2, .2, 1