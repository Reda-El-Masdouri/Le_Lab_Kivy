BoxLayoutExemple:

<BoxLayoutExemple>:
    orientation: "vertical"
    spacing: "10dp"
    Button:
        text: "A"
        size_hint: 0.5, 0.5
        # x, right, center_x
        # y, top, center_y (orientation: "horizontal")
        pos_hint: { "center_x": 0.5 }
    BoxLayout:
        orientation: "horizontal"
        Button:
            text: "R"
        Button:
            text: "E"
        Button:
            text: "D"
        Button:
            text: "A"    
    Button:
        text: "B"
        size_hint: 1, None
        height: "100dp"
    Button:
        text: "C"
        size_hint: None, None
        size: "100dp", "60dp"
    Label:
        text: "D"

<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp", "60dp"
        pos: "200dp", "100dp"
        color: 0, 0, 1, 1
    Label:
        text: "Hello2"
        size: "100dp", "60dp"
        pos: "400dp", "200dp"
        color: 1, .2, .2, 1